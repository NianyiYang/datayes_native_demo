<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <Button
        android:id="@+id/btn_new_engine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onHomeNew"
        android:text="首页（New Engine）"
        app:layout_constraintBottom_toTopOf="@id/btn_with_cache"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_with_cache"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onHomeCached"
        android:text="首页（Cached Engine）"
        app:layout_constraintBottom_toTopOf="@id/btn_router"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_new_engine"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_router"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onRouter"
        android:text="Router"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_with_cache"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>